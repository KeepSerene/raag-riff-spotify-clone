<div class="player-lg disabled" data-player data-player-modal>
  <div class="handle-wrapper" data-drag-handle-wrapper>
    <span class="handle"></span>
  </div>

  <div class="track-info">
    <figure class="figure-img track-banner">
      <img src="" alt="" class="cover-img" data-track-banner />
    </figure>

    <div style="min-width: 0">
      <p class="title-small track-title truncate" data-track-name></p>

      <p class="title-small track-text truncate" data-track-artists></p>
    </div>
  </div>

  <div class="player-controls">
    <div class="player-range-wrapper">
      <span class="label-small progress-label" data-player-lg-track-current-pos>
        0:00
      </span>

      <input
        type="range"
        name="track-position"
        step="1000"
        class="player-range"
        data-player-lg-progress
      />

      <span class="label-small duration-label" data-player-lg-track-duration>
        0:00
      </span>
    </div>

    <div class="player-control-btns">
      <!-- prettier-ignore -->
      <%- include("./icon-btn.ejs", {
            icon: "skip_previous",
            dataAttr: "data-player-prev-btn disabled"
        }) %>

      <%- include("./play-btn.ejs", {
            variant: "filled",
            dataAttr: "data-player-play-btn"
        }) %>

      <%- include("./icon-btn.ejs", {
            icon: "skip_next",
            dataAttr: "data-player-next-btn disabled"
        }) %>
    </div>
  </div>

  <div class="player-volume-controls">
    <%- include("./icon-btn.ejs", { icon: "volume_up", dataAttr:
    "data-volume-btn" }) %>

    <input
      type="range"
      name="player-volume"
      value="0"
      max="100"
      class="player-range"
      data-volume-progress
    />
  </div>
</div>

<!-- Large player modal overlay -->
<div
  class="player-modal-overlay"
  data-player-modal-overlay
  data-player-modal-toggler
></div>
